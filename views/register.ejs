<%- include('partials/headerGuest.ejs') %>
    <style>
        /* Main Container */
        main .container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Header Styling */
        main .container h1 {
            font-size: 2em;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Error Message */
        main .container h2 {
            color: #ff4d4d;
            font-size: 1.1em;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Form Group Styling */
        main .form-group {
            margin-bottom: 15px;
        }

        main .form-group label {
            display: block;
            font-size: 1em;
            color: #666;
            margin-bottom: 5px;
        }

        /* Input Styling */
        main .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        /* Submit Button */
        main .btn {
            width: 100%;
            padding: 10px;
            font-size: 1.1em;
            background-color: #0066cc;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
            transition: background-color 0.3s ease;
        }

        main .btn:hover {
            background-color: #004d99;
        }

        /* Additional Text and Link Styling */
        main p {
            text-align: center;
            font-size: 0.9em;
            color: #666;
            margin-top: 20px;
        }

        main p a {
            color: #0066cc;
            text-decoration: none;
            font-weight: bold;
        }

        main p a:hover {
            text-decoration: underline;
        }
    </style>
    <main>
        <div class="container">
            <h1>تسجيل حساب جديد</h1>
            <% if (locals.error) { %>
                <h2>
                    <%= error %>
                </h2>
                <% } %>
                    <form action="/register" method="POST">
                        <div class="form-group">
                            <label for="username">اسم المستخدم:</label>
                            <input type="text" id="username" name="username" required class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="email">البريد الإلكتروني:</label>
                            <input type="email" id="email" name="email" required class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password">كلمة المرور:</label>
                            <input type="password" id="password" name="password" required class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">تسجيل</button>
                    </form>
        </div>
        <p>
            لو كان لديك حساب بالفعل ف سجل الدخول من
            <a href="/login">
                هنا
            </a>
        </p>
    </main>
    <%- include('partials/footer.ejs') %>